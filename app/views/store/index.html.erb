<h1>Maureen's Store</h1>
<h2>Categories:</h2>
<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category), class: "category" %>
<% end %>

<% @items.each do |item| %>
  <span class="item-card col-lg-4"><%= item.title %> | <%= number_to_currency(item.price) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p></span>
<% end %>